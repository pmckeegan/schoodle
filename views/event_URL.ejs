<!DOCTYPE html>
<html lang="en">
  <% include partials/_header %>

  <body>
    <% include partials/_nav %>
  <!-- POLL BEGINS -->
  <div class="jumbotron">
    <br>
    <h1 class="display-4 text-center">You've been Invited!</h1>
    <hr class="my-4">
  <div class="poll-text" "text-center">
    <h5>What works best for you?</h5>
  </div>
<!-- POLL STARTS HERE -->
  <form id="create_event" action="/events/<%= eventID %>/guest_confirmation" method="POST">
  <div class="form-row">
    <div class="form-group col-md-4">
      <label> Title: <%= title %> </label>
    </div>
    <div class="form-group col-md-4">
      <label> Location: <%= location %> </label>
    </div>
    <div class="form-group col-md-4">
      <label> Note: <%= description %> </label>
    </div>

<!-- SELECT DATES FROM HERE -->
   <div class="form-row">
      <div class="form-group col-md-4">
        <label>Date: <%= date_data[0].date %> <%= date_data[0].votecount %> </label>
        <input type="checkbox" name="date1" value="<%= date_data[0].id %>">
      </div>
      <div class="form-group col-md-4">
        <label>Date: <%= date_data[1].date %><%= date_data[1].votecount %> </label>
        <input type="checkbox" name="date2" value="<%= date_data[1].id %>">
      </div>
      <div class="form-group col-md-4">
        <label>Date: <%= date_data[2].date %><%= date_data[2].votecount %> </label>
        <input type="checkbox" name="date3" value="<%= date_data[2].id %>">
      </div>
    </div>

    <div class="form-group col-md-4 mt-4 offset-md-4">
      <button type="submit" class="btn btn-primary"><i class="fas fa-edit"></i>Submit</button>
    </div>

</form>

    <form method="DELETE" action="/events/<%= eventID %>/results">
      <button type="submit" class="btn btn-primary"><i class="fas fa-edit"></i>Decline Event</button>
    </form>

</div>
  <% include partials/_footer %>
  </body>
</html>



