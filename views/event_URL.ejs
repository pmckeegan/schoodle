<!DOCTYPE html>
<html lang="en">
  <% include partials/_header %>

  <body>
    <% include partials/_nav %>
  <!-- POLL BEGINS -->
  <div class="jumbotron">
    <br>
    <h1 class="display-4 text-center">You've been Invited!</h1>
    <hr class="my-4">
  <div id="poll_logo" class="poll-text" "text-center">
    <h3>What works best for you?</h3>
  </div>
<!-- POLL STARTS HERE -->
  <form id="create_event" action="/events/<%= eventID %>/guest_confirmation" method="POST">
  <div class="form-row">
    <div id="title" class="form-group col-md-4">
      <label> Title: <%= title %> </label>
    </div>
    <div id="location" class="form-group col-md-4">
      <label> Location: <%= location %> </label>
    </div>
    <div id="note" class="form-group col-md-4">
      <label> Note: <%= description %> </label>
    </div>

<!-- SELECT DATES FROM HERE -->
   <div class="form-row">
      <div class="form-group col-md-4">
        <label>Date: <%= date_data[0].date %> <%= date_data[0].votecount %> </label>
        <input type="checkbox" class="checkbox" name="date1" value="<%= date_data[0].id %>">
      </div>
      <div class="form-group col-md-4">
        <label>Date: <%= date_data[1].date %><%= date_data[1].votecount %> </label>
        <input type="checkbox" class="checkbox" name="date2" value="<%= date_data[1].id %>">
      </div>
      <div class="form-group col-md-4">
        <label>Date: <%= date_data[2].date %><%= date_data[2].votecount %> </label>
        <input type="checkbox" class="checkbox" name="date3" value="<%= date_data[2].id %>">
      </div>
    </div>

    <div class="d-inline">
      <button type="submit" class="btn btn-primary"><i class="fas fa-edit"></i> Submit</button>
    </div>
  </form>
<!-- DELETE BUTTON -->
    <div class="d-inline">
      <form method="DELETE" action="/events/<%= eventID %>/results">
        <button type="submit" class="btn btn-primary"><i class="fas fa-user-minus"></i> Decline Event</button>
      </form>
    </div>
  </div>
  <% include partials/_footer %>
  </body>
</html>



