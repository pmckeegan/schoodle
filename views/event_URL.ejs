<!DOCTYPE html>
<html lang="en">
  <% include partials/_header %>

  <body>
    <% include partials/_nav %>
  <!-- POLL BEGINS -->
  <div class="jumbotron">
    <br>
    <h1 class="display-4 text-center">You've been Invited!</h1>
    <hr class="my-4">
    <p class="lead">What works best for you?</p>
<!-- FORM STARTS HERE -->

    <form id="create_event" action="/events/<%= eventID %>/guest_confirmation" method="POST">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label> Title: <%= title %> </label>
      <div class="form-group col-md-6">
        <label> Location: <%= location %> </label>
      </div>
    </div>
    <div class="form-group">
      <label> Note: <%= description %> </label>
    </div>

   <div class="form-row">
      <div class="form-group col-md-4">
        <label>Date: <%= date_data[0].date %> </label>
        <input type="checkbox" name="date1" value="<%= date_data[0].id %>">
      </div>
      <div class="form-group col-md-4">
        <label>Date: <%= date_data[1].date %> </label>
        <input type="checkbox" name="date2" value="<%= date_data[1].id %>">
      </div>
      <div class="form-group col-md-4">
        <label>Date: <%= date_data[2].date %> </label>
        <input type="checkbox" name="date3" value="<%= date_data[2].id %>">
      </div>
    </div>

    <div class="form-group col-md-4 mt-4 offset-md-4">
      <button type="submit" class="btn btn-primary"><i class="fas fa-edit"></i>Submit</button>
    </div>
</form>

    <form method="DELETE" action="">
      <button type="submit" href="/events/<%= eventID %>/delete_confirmation" class="btn btn-primary"><i class="fas fa-edit"></i>Decline Event</button>
    </form>

</div>
  <% include partials/_footer %>
  </body>
</html>



