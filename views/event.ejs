  <!-- Create an Event Form -->
  <form id="create_event" action="/events" method="POST">
    <div class="form-row">
      <div class="form-group col-md-6">
        <label> Title: </label>
        <input type="text" class="form-control" name="title" placeholder="Ahmed Appreciation Day">
      </div>
      <div class="form-group col-md-6">
        <label> Location: </label><input type="text" class="form-control" name="location" placeholder="Lighthouse Labs">
      </div>
    </div>
    <div class="form-group">
      <label> Note: </label>
      <input type="text" class="form-control" name="note" placeholder="Bring Donuts">
    </div>

    <div class="form-row">
      <div class="form-group col-md-4">
        <label>Date: </label>
        <input type="text" id="flatpickr" name="date1" placeholder="Option 1" >
      </div>
      <div class="form-group col-md-4">
        <label>Date: </label>
        <input type="text" id="flatpickr" name="date2" placeholder="Option 2" >
      </div>
      <div class="form-group col-md-4">
        <label>Date: </label>
        <input type="text" id="flatpickr" name="date3" placeholder="Option 3" >
      </div>
    </div>

     <div class="form-group col-md-4 mt-4 offset-md-4">
       <button type="submit" style="width:250px;" class="btn btn-info text btn-md mb-4"></i>Submit</button>
    </div>
</form>
</div>

